@model List<Trendify.Models.Order>
@{
    ViewData["Title"] = "Order History - Trendify";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-history me-2"></i>Order History</h2>
                <div class="btn-group">
                    <a href="@Url.Action("Status", "Orders", new { status = "Pending" })" class="btn btn-outline-warning btn-sm">Pending</a>
                    <a href="@Url.Action("Status", "Orders", new { status = "Confirmed" })" class="btn btn-outline-info btn-sm">Confirmed</a>
                    <a href="@Url.Action("Status", "Orders", new { status = "Shipped" })" class="btn btn-outline-primary btn-sm">Shipped</a>
                    <a href="@Url.Action("Status", "Orders", new { status = "Delivered" })" class="btn btn-outline-success btn-sm">Delivered</a>
                    <a href="@Url.Action("Status", "Orders", new { status = "Cancelled" })" class="btn btn-outline-danger btn-sm">Cancelled</a>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@order.Id</strong>
                                            </td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>@order.OrderDetails.Sum(od => od.Quantity) items</td>
                                            <td class="fw-bold text-primary">$@order.TotalAmount.ToString("0.00")</td>
                                            <td>
                                                @Html.Raw(GetStatusBadge(order.Status))
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                                @if (order.Status == "Pending" || order.Status == "Confirmed")
                                                {
                                                    <form asp-action="Cancel" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                onclick="return confirm('Are you sure you want to cancel this order?')">
                                                            <i class="fas fa-times me-1"></i>Cancel
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-bag fa-4x text-muted mb-3"></i>
                    <h3>No Orders Yet</h3>
                    <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your order history here.</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Pending" => "<span class='badge bg-warning text-dark'><i class='fas fa-clock me-1'></i>Pending</span>",
            "Confirmed" => "<span class='badge bg-info'><i class='fas fa-check-circle me-1'></i>Confirmed</span>",
            "Shipped" => "<span class='badge bg-primary'><i class='fas fa-shipping-fast me-1'></i>Shipped</span>",
            "Delivered" => "<span class='badge bg-success'><i class='fas fa-box me-1'></i>Delivered</span>",
            "Cancelled" => "<span class='badge bg-danger'><i class='fas fa-times me-1'></i>Cancelled</span>",
            _ => "<span class='badge bg-secondary'>" + status + "</span>"
        };
    }
}

<style>
    .table td {
        vertical-align: middle;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.5rem 0.75rem;
    }

    .btn-group .btn {
        border-radius: 0.375rem;
        margin: 0 2px;
    }
</style>