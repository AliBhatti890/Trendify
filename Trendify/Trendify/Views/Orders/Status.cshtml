@model List<Trendify.Models.Order>
@{
    ViewData["Title"] = $"{ViewBag.Status} Orders - Trendify";
    var status = ViewBag.Status as string;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-filter me-2"></i>@status Orders</h2>
                <a href="@Url.Action("Index", "Orders")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to All Orders
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td><strong>#@order.Id</strong></td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>@order.OrderDetails.Sum(od => od.Quantity) items</td>
                                            <td class="fw-bold text-primary">$@order.TotalAmount.ToString("0.00")</td>
                                            <td>@GetStatusBadge(order.Status)</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h3>No @status Orders</h3>
                    <p class="text-muted">You don't have any @status.ToLower() orders at the moment.</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                        <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Pending" => "<span class='badge bg-warning text-dark'><i class='fas fa-clock me-1'></i>Pending</span>",
            "Confirmed" => "<span class='badge bg-info'><i class='fas fa-check-circle me-1'></i>Confirmed</span>",
            "Shipped" => "<span class='badge bg-primary'><i class='fas fa-shipping-fast me-1'></i>Shipped</span>",
            "Delivered" => "<span class='badge bg-success'><i class='fas fa-box me-1'></i>Delivered</span>",
            "Cancelled" => "<span class='badge bg-danger'><i class='fas fa-times me-1'></i>Cancelled</span>",
            _ => "<span class='badge bg-secondary'>" + status + "</span>"
        };
    }
}