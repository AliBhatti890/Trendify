@model Trendify.Models.Order
@{
    ViewData["Title"] = $"Order #${Model.Id} - Trendify";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Orders")">Order History</a></li>
            <li class="breadcrumb-item active">Order #@Model.Id</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <!-- Order Summary -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Summary</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="product-image-placeholder bg-light rounded me-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-shopping-bag text-muted"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@item.Product.Name</h6>
                                                    <small class="text-muted">@item.Product.Brand</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>$@item.UnitPrice.ToString("0.00")</td>
                                        <td>@item.Quantity</td>
                                        <td class="fw-bold">$@item.TotalPrice.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="fw-bold text-primary h5">$@Model.TotalAmount.ToString("0.00")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Order Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Order Status:</strong>
                        <div class="mt-1">
                            @Html.Raw(GetStatusBadge(Model.Status))
                        </div>
                    </div>

                    <div class="mb-3">
                        <strong>Order Date:</strong>
                        <div>@Model.OrderDate.ToString("f")</div>
                    </div>

                    <div class="mb-3">
                        <strong>Payment Method:</strong>
                        <div>
                            <span class="badge bg-secondary">
                                <i class="fas fa-money-bill-wave me-1"></i>@Model.PaymentMethod
                            </span>
                        </div>
                    </div>

                    @if (Model.Status == "Pending" || Model.Status == "Confirmed")
                    {
                        <form asp-action="Cancel" method="post" class="mt-3">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Are you sure you want to cancel this order?')">
                                <i class="fas fa-times me-2"></i>Cancel Order
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Shipping Information</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>@Model.CustomerName</strong></p>
                    <p class="mb-2">@Model.ShippingAddress</p>
                    <p class="mb-2">@Model.City, @Model.ZipCode</p>
                    <p class="mb-0">@Model.PhoneNumber</p>
                    <p class="mb-0">@Model.Email</p>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-3">
                            <strong>Order Notes:</strong>
                            <p class="mb-0 text-muted">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Pending" => "<span class='badge bg-warning text-dark'><i class='fas fa-clock me-1'></i>Pending</span>",
            "Confirmed" => "<span class='badge bg-info'><i class='fas fa-check-circle me-1'></i>Confirmed</span>",
            "Shipped" => "<span class='badge bg-primary'><i class='fas fa-shipping-fast me-1'></i>Shipped</span>",
            "Delivered" => "<span class='badge bg-success'><i class='fas fa-box me-1'></i>Delivered</span>",
            "Cancelled" => "<span class='badge bg-danger'><i class='fas fa-times me-1'></i>Cancelled</span>",
            _ => "<span class='badge bg-secondary'>" + status + "</span>"
        };
    }
}

<style>
    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }

    .table td {
        vertical-align: middle;
    }

    .product-image-placeholder {
        flex-shrink: 0;
    }
</style>