@model List<Trendify.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart - Trendify";
    var cartTotal = ViewBag.CartTotal as decimal? ?? 0;
    var cartItemCount = ViewBag.CartItemCount as int? ?? 0;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Shopping Cart</h2>

            @if (Model != null && Model.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="product-image-placeholder bg-light rounded me-3" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                                        <i class="fas fa-shopping-bag text-muted"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@item.Product.Name</h6>
                                                        <small class="text-muted">@item.Product.Brand</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>$@item.Product.Price.ToString("0.00")</td>
                                            <td>
                                                <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <div class="input-group input-group-sm" style="width: 120px;">
                                                        <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-outline-secondary" @(item.Quantity <= 1 ? "disabled" : "")>-</button>
                                                        <input type="text" class="form-control text-center" value="@item.Quantity" readonly>
                                                        <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-outline-secondary">+</button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>$@item.TotalPrice.ToString("0.00")</td>
                                            <td>
                                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-8">
                                <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </a>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h5>Cart Summary</h5>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Items:</span>
                                            <span>@cartItemCount</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-3">
                                            <strong>Total:</strong>
                                            <strong class="text-primary">$@cartTotal.ToString("0.00")</strong>
                                        </div>
                                        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary w-100">
                                            <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                    <h3>Your cart is empty</h3>
                    <p class="text-muted mb-4">Start shopping to add items to your cart</p>
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                    </a>
                </div>
            }
        </div>
    </div>
</div>