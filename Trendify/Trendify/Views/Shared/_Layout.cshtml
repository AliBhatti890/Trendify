<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trendify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Bar -->
        <div class="top-bar bg-dark text-white py-2">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start">
                        <small>Free shipping on orders over $50 | Use code: TRENDIFY10</small>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <small>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span>Welcome, @User.Identity.Name! | </span>
                                <a href="/Identity/Account/Logout" class="text-white">Logout</a>
                            }
                            else
                            {
                                <a href="/Account/Login" class="text-white">Login</a>
                                <span> | </span>
                                <a href="/Account/Register" class="text-white">Register</a>
                            }
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-star me-2"></i>Trend<span class="text-dark">ify</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Categories
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="1">Shoes</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="2">Shirts</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="3">Jeans</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="4">Jewelry</a></li>
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="5">Watches</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="Index">Order History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex">
                        <form class="d-flex me-3" asp-controller="Products" asp-action="Index" method="get">
                            <input class="form-control me-2" type="search" name="search" placeholder="Search products...">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>

                        <div class="dropdown">
                            <a class="btn btn-outline-dark position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @await Component.InvokeAsync("CartCount")
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-4">Trendify</h5>
                    <p>Your one-stop destination for fashion and lifestyle products. Quality guaranteed with fast delivery.</p>
                    <div class="social-icons">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-4">Shop</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">All Products</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">New Arrivals</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Best Sellers</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Sale</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Gift Cards</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-4">Customer Service</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none">Contact Us</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Shipping Policy</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Returns & Refunds</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">FAQ</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none">Terms & Conditions</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase mb-4">Contact Info</h5>
                    <p class="text-white-50">
                        <i class="fas fa-map-marker-alt me-2"></i>123 Fashion Street, New York, NY
                    </p>
                    <p class="text-white-50">
                        <i class="fas fa-phone me-2"></i>+1 (555) 123-4567
                    </p>
                    <p class="text-white-50">
                        <i class="fas fa-envelope me-2"></i>support@trendify.com
                    </p>
                </div>
            </div>

            <hr class="mb-4">
            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p class="text-white-50 mb-0">&copy; 2025 Trendify. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts in CORRECT ORDER -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>